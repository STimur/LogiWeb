<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>T-Logist Web</display-name>

    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>com.tsystems.javaschool.timber.logiweb.controller.FrontController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TruckController</servlet-name>
        <display-name>Truck</display-name>
        <servlet-class>com.tsystems.javaschool.timber.logiweb.controller.TruckController</servlet-class>
    </servlet>

    <!-- servlet to try it out a sample of using js on client -->
    <servlet>
        <servlet-name>TruckJSController</servlet-name>
        <display-name>TruckJS</display-name>
        <servlet-class>com.tsystems.javaschool.timber.logiweb.controller.TruckJSController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DriverController</servlet-name>
        <display-name>Driver</display-name>
        <servlet-class>com.tsystems.javaschool.timber.logiweb.controller.DriverController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>OrderController</servlet-name>
        <display-name>Order</display-name>
        <servlet-class>com.tsystems.javaschool.timber.logiweb.controller.OrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>TruckController</servlet-name>
        <url-pattern>/Truck</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TruckJSController</servlet-name>
        <url-pattern>/TruckJSController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DriverController</servlet-name>
        <url-pattern>/Driver</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/Order</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

</web-app>
